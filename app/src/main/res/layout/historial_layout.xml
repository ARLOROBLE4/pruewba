<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1E1E1E">

    <TextView
        android:id="@+id/txtMarca"
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="14dp"
        android:text=""
        android:textColor="@color/texto"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/textView13"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtModelo"
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="14dp"
        android:text=""
        android:textColor="@color/texto"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/txtMarca" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="148dp"
        android:layout_height="45dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="11dp"
        android:text="@string/txtHstEstado"
        android:textColor="@color/texto"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:id="@+id/txtEstado"
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="11dp"
        android:text=""
        android:textColor="@color/texto"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/txtModelo" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="148dp"
        android:layout_height="45dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="14dp"
        android:text="@string/txtHstModelo"
        android:textColor="@color/texto"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="148dp"
        android:layout_height="45dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="14dp"
        android:text="@string/txtHstMarca"
        android:textColor="@color/texto"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnVerMas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="169dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="134dp"
        android:text="@string/btnVerMas"
        android:textColor="@color/texto"
        android:textSize="16dp"
        app:backgroundTint="@color/colorBotones"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />
</androidx.constraintlayout.widget.ConstraintLayout>